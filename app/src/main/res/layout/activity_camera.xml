<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.john.mimicvideo.CameraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <VideoView
            android:id="@+id/video_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/videoContentPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:resize_mode="fill"
            app:use_controller="false">

        </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

        <ImageView
            android:id="@+id/videoPlayIconImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/play_button" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/reportImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/com_facebook_close" />

        <SeekBar
            android:id="@+id/seek1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:max="100"
            android:progress="0"


            />

        <TextView
            android:id="@+id/txttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek1"
            android:layout_margin="10dp"
            android:textColor="#ff1100"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/audioCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <Button
            android:id="@+id/tbrecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/txttime"
            android:onClick="startRecording"
            android:text="Start recording" />

        <Button
            android:id="@+id/tbstop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tbrecord"
            android:onClick="stopRecording"
            android:text="Stop recording and Play it" />

        <Button
            android:id="@+id/muteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tbstop"
            android:text="有聲" />

        <Button
            android:id="@+id/deleteFirstAudioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/muteBtn"
            android:text="刪除第一聲道"
            android:visibility="gone" />

        <Button
            android:id="@+id/deleteSecondAudioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteFirstAudioBtn"
            android:text="刪除第二"
            android:visibility="gone" />

        <Button
            android:id="@+id/deleteThirdAufdioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteSecondAudioBtn"
            android:text="刪除第三"
            android:visibility="gone" />

        <com.example.john.mimicvideo.view.VideoTrimmer.view.ProgressBarView
            android:id="@+id/timeVideoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteThirdAufdioBtn" />

        <com.example.john.mimicvideo.view.VideoTrimmer.view.TimeLineView
            android:id="@+id/timeLineView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/timeVideoView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <com.example.john.mimicvideo.view.VideoTrimmer.view.RangeSeekBarView
            android:id="@+id/timeLineBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/timeLineView"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/cutVideoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="裁減" />

            <ImageView
                android:id="@+id/startRecordImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/com_facebook_close" />

            <TextView
                android:id="@+id/toPostTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="gog" />
        </RelativeLayout>
    </LinearLayout>

    <!--<com.example.john.mimicvideo.view.VideoTrimmer.K4LVideoTrimmer-->
        <!--android:id="@+id/timeLine"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_width="match_parent" />-->

</LinearLayout>
