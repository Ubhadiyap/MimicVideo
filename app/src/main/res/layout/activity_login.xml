<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john.mimicvideo.com.shou.john.mimicvideo.LoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/logoNameTxt"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/crazy_talk_logo" />

    <TextView
        android:id="@+id/logoNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="狂說"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/logoDescriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoNameTxt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="享受你的娛樂時刻" />

    <Button
        android:id="@+id/login_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoDescriptionTxt"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_facebook_btn_selector"
        android:drawablePadding="60dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="80dp"
        android:text="Facebook登入"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/fbLlogoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        android:visibility="gone" />
</RelativeLayout>
