<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john.mimicvideo.LogoActivity">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/logoNameTxt"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/dolphin" />

    <TextView
        android:id="@+id/logoNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="狂說"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/logoDescriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoNameTxt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="享受你的娛樂時刻" />
</RelativeLayout>
